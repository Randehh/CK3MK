<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CK3MK.Views.GameModels.Attributes.GameModelAttributeCharacterControl">
  <ComboBox Items="{ Binding AttributeContextObject }" SelectedItem="{ Binding Attribute.Value }" HorizontalAlignment="Stretch" VerticalContentAlignment="Center">
    <ComboBox.ItemTemplate>
      <DataTemplate>
        <TextBlock Text="{ Binding Name.StringValue }" />
      </DataTemplate>
    </ComboBox.ItemTemplate>
  </ComboBox>
</UserControl>
