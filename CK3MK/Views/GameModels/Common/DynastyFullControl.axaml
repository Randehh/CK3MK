<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:va="using:CK3MK.Views.GameModels.Common"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="CK3MK.Views.GameModels.Common.DynastyFullControl">
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="300"/>
      <ColumnDefinition Width="15"/>
      <ColumnDefinition Width="600"/>
    </Grid.ColumnDefinitions>

    <va:DynastySelectorControl Grid.Column="0" Margin="0,0,5,0"/>

    <Grid Grid.Column="1" Margin="7" Background="Gray"/>

    <va:DynastyDetailsControl DataContext="{Binding SelectedDynasty}" Grid.Column="2" Margin="5,0,0,0"/>
  </Grid>
</UserControl>
