<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:CK3MK.Views.GameModels.Attributes"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CK3MK.Views.GameModels.Common.DynastyDetailsControl">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="10"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Text="Dynasty details" FontWeight="Bold" FontSize="20"/>

    <StackPanel x:Name="AttributeStackPanel" Grid.Row="2">
      <v:GameModelAttributeControl DataContext="{ Binding Name }"/>
      <v:GameModelAttributeControl DataContext="{ Binding Prefix }"/>
      <v:GameModelAttributeControl DataContext="{ Binding Culture }"/>
    </StackPanel>
  </Grid>
</UserControl>