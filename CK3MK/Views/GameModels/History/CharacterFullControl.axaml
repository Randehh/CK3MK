<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:va="using:CK3MK.Views.GameModels.History"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="CK3MK.Views.GameModels.History.CharacterFullControl">
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="300"/>
      <ColumnDefinition Width="15"/>
      <ColumnDefinition Width="600"/>
    </Grid.ColumnDefinitions>
    
    <va:CharacterSelectorControl Grid.Column="0" Margin="0,0,5,0"/>
    
    <Grid Grid.Column="1" Margin="7" Background="Gray"/>

    <va:CharacterDetailsControl Grid.Column="2" DataContext="{Binding SelectedCharacter}" Margin="5,0,0,0" x:Name="DetailsControl"/>
  </Grid>
</UserControl>
