<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="40"
             x:Class="CK3MK.Views.GameModelAttributeControl">
  <Grid Margin="2">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200"/>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="100"/>
    </Grid.ColumnDefinitions>
    
    <TextBlock Text="{ Binding Name }" Grid.Column="0" VerticalAlignment="Center"/>
    <TextBox Text="{ Binding StringValue }" Grid.Column="2" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"/>
    <ToggleButton Content="Assigned" IsChecked="{ Binding IsAssigned }" Grid.Column="4" HorizontalAlignment="Stretch"/>
  </Grid>
</UserControl>
