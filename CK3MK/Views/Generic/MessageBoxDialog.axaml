<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        CanResize="False"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        x:Class="CK3MK.Views.Generic.MessageBoxDialog"
        Title="Dialog">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition MinHeight="100"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>
    
    <TextBlock Text="{ Binding MessageText }" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <Button Content="OK" Command="{ Binding OnCommand_Ok }" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
  </Grid>
</Window>
