<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        CanResize="False"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        x:Class="CK3MK.Views.GlobalSettingsDialog"
        Title="GlobalSettingsDialog">
  <Grid Margin="10">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200"/>
      <ColumnDefinition Width="500"/>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Base game files:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
    <Grid Grid.Column="1" Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="100"/>
      </Grid.ColumnDefinitions>
      <TextBox Name="TextBox_Destination" Text="{Binding BaseGameFilePath}" Grid.Column="0" Margin="0,0,5,0" />
      <Button Name="Button_BrowseBaseGameFiles" Content="Browse..." Width="100" Grid.Column="1" Command="{Binding OnCommand_BrowseBaseGameFiles }"/>
    </Grid>

    <Button Name="Button_ParseGameDump" Content="Select and parse game dump" Command="{Binding OnCommand_ParseGameDump }" Grid.Row="1" Grid.ColumnSpan="2"/>    
    
  </Grid>
</Window>
